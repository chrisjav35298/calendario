{% extends 'base.html.twig' %}

{% block title %}Establecimiento index{% endblock %}

{% block body %}
    <h1>Establecimiento index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Cueanexo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for establecimiento in establecimientos %}
            <tr>
                <td>{{ establecimiento.id }}</td>
                <td>{{ establecimiento.nombre }}</td>
                <td>{{ establecimiento.cueanexo }}</td>
